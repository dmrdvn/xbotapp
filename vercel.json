{
  "crons": [
    {
      "path": "/api/cron/content-generator",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/queue-manager",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/tweet-publisher",
      "schedule": "0 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/cron/(.*)",
      "headers": [
        {
          "key": "Authorization",
          "value": "Bearer @CRON_SECRET"
        }
      ]
    }
  ]
} 